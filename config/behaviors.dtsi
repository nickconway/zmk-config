wing: wing {
    compatible = "zmk,behavior-mod-morph";
    label = "WIN_GRAVE";
    #binding-cells = <0>;
    /* bindings = <AS(Q)>, <&kp GRAVE>; */
    bindings = <ASBP(Q)>, <&kp GRAVE>;
    mods = <(MOD_LGUI)>;
};

