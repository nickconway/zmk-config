/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT0 LT1 LT2 LT3 LT4 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM0 LM1 LM2 LM3 LM4 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB0 LB1 LB2 LB3 LB4 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH0 LH1 LH2 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */
	  
#define COMBO(NAME, TIMEOUT, KEYS, BINDINGS, LAYERS) \
	combo_##NAME { \
        timeout-ms = <TIMEOUT>; \
        key-positions = <KEYS>; \
        bindings = <BINDINGS>; \
        layers = <LAYERS>; \
};

combos {

    compatible = "zmk,combos";

    COMBO(hmrl_par, 50, 14 26, &mparen, BASE)
    COMBO(hmrl_bkt, 50, 15 27, &mbracket, BASE)
    COMBO(hmrl_brc, 50, 16 28, &mbrace, BASE)
    COMBO(hmrr_par, 50, 21 33, &mparen, BASE)
    COMBO(hmrr_bkt, 50, 20 32, &mbracket, BASE)
    COMBO(hmrr_brc, 50, 19 31, &mbrace, BASE)
    COMBO(dash, 50, 7 19, &as LS(MINUS) MINUS, BASE)
    COMBO(semi, 50, 22 34, &as LS(SEMI) SEMI, BASE)

    #ifdef NOPOWERSWITCH
    COMBO(none, 50, 13 14 15 16 19 20 21 22, &tog NOTHING, BASE NOTHING)
    #endif

    #ifdef GAMING
    COMBO(game, 50, 36 41, &tog GAME, BASE GAME)
    #endif

};
