/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT0 LT1 LT2 LT3 LT4 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM0 LM1 LM2 LM3 LM4 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB0 LB1 LB2 LB3 LB4 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH0 LH1 LH2 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */
	  
#define COMBO(NAME, TIMEOUT, KEYS, BINDINGS, LAYERS) \
    combo_##NAME { \
          timeout-ms = <TIMEOUT>; \
          key-positions = <KEYS>; \
          bindings = <BINDINGS>; \
          layers = <LAYERS>; \
    };

combos {

    compatible = "zmk,combos";

    COMBO(hmrl_par, 50, LM1 LB1, &mparen, BASE)
    COMBO(hmrl_bkt, 50, LM2 LB2, &mbracket, BASE)
    COMBO(hmrl_brc, 50, LM3 LB3, &mbrace, BASE)
    COMBO(hmrr_par, 50, RM3 RB3, &mparen, BASE)
    COMBO(hmrr_bkt, 50, RM2 RB2, &mbracket, BASE)
    COMBO(hmrr_brc, 50, RM1 RB1, &mbrace, BASE)
    COMBO(dash, 50, RB1 RB2, &as LS(MINUS) MINUS, BASE)
    COMBO(semi, 50, RB2 RB3, &as LS(SEMI) SEMI, BASE)

    COMBO(none, 50, LM0 LM1 LM2 LM3 RM1 RM2 RM3 RM4, &tog NOTHING, BASE NOTHING)

    COMBO(game, 50, LH1 RH1, &tog GAME, BASE GAME)

};
