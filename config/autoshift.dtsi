#define AS(letter) \
    hu##letter: hu##letter { \
        compatible = "zmk,behavior-hold-tap"; \
        label = ZMK_MACRO_STRINGIFY(hu##letter); \
        #binding-cells = <2>; \
        flavor = "tap-preferred"; \
        tapping-term-ms = <175>; \
        quick-tap-ms = <200>; \
        bindings = <&ASB##letter>, <&none>; \
    }; \
 \
    AS##letter: AS##letter { \
        compatible = "zmk,behavior-macro"; \
        label = ZMK_MACRO_STRINGIFY(AS##letter); \
        #binding-cells = <0>; \
        bindings = \
            <&macro_tap &kp letter>, \
            <&macro_press &hu##letter 0 0>, \
            <&macro_pause_for_release>, \
            <&macro_release &hu##letter 0 0> \
        ; \
    }; \
 \
    ASB##letter: ASB##letter { \
        compatible = "zmk,behavior-macro"; \
        label = ZMK_MACRO_STRINGIFY(ASB##letter); \
        #binding-cells = <0>; \
        tap-ms = <10>; \
        wait-ms = <10>; \
        bindings = \
            <&macro_tap &kp BSPC>, \
            <&macro_press &kp LS(letter)>, \
            <&macro_pause_for_release>, \
            <&macro_release &kp LS(letter)> \
        ; \
    };

