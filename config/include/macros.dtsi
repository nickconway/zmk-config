#define MACRO_TAP_TERM 5
#define MACRO_WAIT_TERM 0

#define MACRO(NAME, WAIT, TAP, BINDINGS) \
    NAME: NAME { \
        compatible = "zmk,behavior-macro"; \
        label = ZMK_MACRO_STRINGIFY(ZM_##NAME); \
        #binding-cells = <0>; \
        wait-ms = <WAIT>; \
        tap-ms = <TAP>; \
        bindings = <BINDINGS>; \
};

MACRO(m1, MACRO_WAIT_TERM, MACRO_TAP_TERM, &kp LA(SPC))
MACRO(m2, MACRO_WAIT_TERM, MACRO_TAP_TERM, &kp RET &tog GAME &tog GAMET)

MACRO(mparen, MACRO_WAIT_TERM, MACRO_TAP_TERM, &kp LPAR &kp RPAR &kp LEFT)
MACRO(mbracket, MACRO_WAIT_TERM, MACRO_TAP_TERM, &kp LBKT &kp RBKT &kp LEFT)
MACRO(mbrace, MACRO_WAIT_TERM, MACRO_TAP_TERM, &kp LBRC &kp RBRC &kp LEFT)

dm1: dm1 {
    compatible = "zmk,behavior-dynamic-macro";
    label = "dynamic-macro-1";
    wait-ms = <10>;
    #binding-cells = <1>;
};
